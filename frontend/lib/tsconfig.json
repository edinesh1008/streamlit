{
  "extends": "@streamlit/typescript-config/react.tsconfig.json",
  "compilerOptions": {
    "checkJs": false,
    "baseUrl": ".",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "dist",
    "paths": {
      "~lib/*": ["src/*"],
      "@streamlit/component-v2-lib": ["../component-v2-lib/src"],
      "@streamlit/lib": ["../lib/src"],
      "@streamlit/app": ["./src"],
      "@streamlit/connection": ["../connection/src"],
      "@streamlit/protobuf": ["../protobuf/src"],
      "@streamlit/utils": ["../utils/src"]
    }
  },
  "include": ["src/**/*", "declarations.d.ts", "emotion.d.ts"],
  "exclude": ["**/proto.js"]
}
